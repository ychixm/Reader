<Window x:Class="Reader.MainFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reader"
        xmlns:userControls="clr-namespace:Reader.UserControls"
        mc:Ignorable="d"
        Title="MainFrame" Height="768" Width="1024">
    <Grid>
        <!-- The MainAppTabControl now takes up the entire grid -->
        <TabControl x:Name="MainAppTabControl" SelectedIndex="0" MouseDown="MainAppTabControl_MouseDown" SelectionChanged="MainAppTabControl_SelectionChanged">
            <TabItem Header="Modules">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <Button x:Name="LaunchReaderAppButton" Content="Open Reader App" Margin="5" Padding="5" Click="LaunchReaderAppButton_Click"/>
                        <!-- Other app launcher buttons can be added here in the future -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Options" x:Name="OptionsTab">
                <userControls:OptionsTabContentControl x:Name="MyOptionsContentControl"/>
            </TabItem>
            <!-- Other tabs for different apps will be added here by MainFrame.xaml.cs -->
        </TabControl>
    </Grid>
</Window>
