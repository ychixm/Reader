<Window
    x:Class="SoundWeaver.Vue.AddChannelDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ajouter un Salon Discord"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow">
    <Border MinWidth="340" Padding="20">
        <StackPanel>
            <TextBlock
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="Ajouter un Salon Discord" />
            <TextBlock Text="Guild ID" />
            <TextBox Margin="0,5" Text="{Binding GuildId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Channel ID" />
            <TextBox Margin="0,5" Text="{Binding ChannelId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Bitrate" />
            <TextBox Margin="0,5" Text="{Binding Bitrate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel
                Margin="0,15,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    MinWidth="90"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    Content="Enregistrer" />
                <Button
                    MinWidth="90"
                    Command="{Binding CancelCommand}"
                    Content="Annuler" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
