<Window
    x:Class="SoundWeaver.Vue.AddSfxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ajouter un SFX"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Margin="0,0,0,4" Text="Fichier audio :" />
            <StackPanel Orientation="Horizontal">
                <TextBox
                    Width="250"
                    IsReadOnly="True"
                    Text="{Binding FilePath, Mode=TwoWay}" />
                <Button
                    Margin="6,0,0,0"
                    Command="{Binding BrowseFileCommand}"
                    Content="Parcourir..." />
            </StackPanel>

            <TextBlock Margin="0,12,0,4" Text="Type de SFX :" />
            <ComboBox
                Width="150"
                ItemsSource="{Binding Types}"
                SelectedItem="{Binding SelectedType}" />

            <TextBlock Margin="0,12,0,4" Text="Nom à afficher :" />
            <TextBox Width="250" Text="{Binding DisplayName, Mode=TwoWay}" />

            <StackPanel
                Margin="0,18,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding ConfirmCommand}"
                    Content="OK"
                    IsEnabled="{Binding CanConfirm}" />
                <Button
                    Width="100"
                    Command="{Binding CancelCommand}"
                    Content="Annuler" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>