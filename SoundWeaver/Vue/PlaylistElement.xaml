<UserControl x:Class="SoundWeaver.Vue.PlaylistElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <GroupBox Header="{Binding Playlist.Name}" Width="500" Margin="0,0,0,0">
        <StackPanel>
            <!-- tes boutons, la liste, etc -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Ouvrir .m3u8"
                        Command="{Binding BrowseAndLoadCommand}"
                        Margin="0,0,8,0"/>
                <Button Content="Charger"
                        Command="{Binding LoadPlaylistCommand}"
                        CommandParameter="{Binding Playlist}"
                        Margin="8,0,0,0"/>
            </StackPanel>
            <ItemsControl ItemsSource="{Binding Playlist.Tracks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" Margin="10,2,0,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Play"
                    Command="{Binding PlayPlaylistCommand}"
                    CommandParameter="{Binding Playlist}"
                    Margin="0,4,0,0"/>
        </StackPanel>
    </GroupBox>
</UserControl>
