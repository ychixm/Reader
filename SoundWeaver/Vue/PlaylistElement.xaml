<UserControl x:Class="SoundWeaver.Vue.PlaylistElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Models="clr-namespace:SoundWeaver.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Models:SoundWeaverControlViewModel}">

    <Border BorderThickness="1"
            BorderBrush="#888"
            CornerRadius="5"
            Padding="8"
            Margin="0,2,0,2">
        <StackPanel>

            <!-- En-tête : nom + bouton Charger -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Playlist.Name}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <Button Content="Charger"
                        Command="{Binding LoadPlaylistCommand}"
                        CommandParameter="{Binding Playlist}"
                        Margin="8,0,0,0"/>
            </StackPanel>

            <!-- Pistes -->
            <ItemsControl ItemsSource="{Binding Tracks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"
                                   Margin="10,2,0,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Play -->
            <Button Content="Play"
                    Command="{Binding PlayPlaylistCommand}"
                    CommandParameter="{Binding Playlist}"
                    Margin="0,4,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
