<UserControl x:Class="Reader.UserControls.ImageViewerAppControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Reader.UserControls"
             xmlns:models="clr-namespace:Reader.Models"
             xmlns:business="clr-namespace:Reader.Business"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <TabControl x:Name="InternalTabControl" Margin="0,30,0,0" MouseDown="InternalTabControl_MouseDown">
            <TabControl.Resources>
                 <Style TargetType="TabItem">
                     <Setter Property="Background" Value="{DynamicResource TabItemBackgroundBrush}"/>
                     <Setter Property="BorderBrush" Value="{DynamicResource TabItemBorderBrush}"/>
                     <Setter Property="Foreground" Value="{DynamicResource TabItemForegroundBrush}"/>
                     <Style.Triggers>
                         <Trigger Property="IsSelected" Value="True">
                             <Setter Property="Background" Value="{DynamicResource TabItemBackground_SelectedBrush}"/>
                             <Setter Property="Foreground" Value="{DynamicResource TabItemForeground_SelectedBrush}"/>
                         </Trigger>
                         <Trigger Property="IsMouseOver" Value="True">
                             <Setter Property="Background" Value="{DynamicResource TabItemBackground_MouseOverBrush}"/>
                         </Trigger>
                     </Style.Triggers>
                 </Style>
            </TabControl.Resources>
            <TabItem x:Name="ChaptersTab" Header="Chapters">
                <Grid>
                     <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="ChaptersGrid" Margin="5">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" ItemWidth="200" ItemHeight="350"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
         <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Height="25">
             <TextBlock Text="Tab Overflow:" VerticalAlignment="Center" Margin="0,0,5,0"/>
             <ComboBox x:Name="TabOverflowModeComboBox" SelectedIndex="0" VerticalAlignment="Center" Width="120" SelectionChanged="TabOverflowModeComboBox_SelectionChanged">
                 <ComboBoxItem Content="Scrollbar"/>
                 <ComboBoxItem Content="ArrowButtons"/>
                 <ComboBoxItem Content="TabDropdown"/>
             </ComboBox>
         </StackPanel>
    </Grid>
</UserControl>
