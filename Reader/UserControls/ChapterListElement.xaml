<UserControl x:Class="Reader.UserControls.ChapterListElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reader.UserControls">
    <Grid x:Name="RootGrid" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image x:Name="ChapterImage" HorizontalAlignment="Center" VerticalAlignment="center" Margin="0,0,0,0" Grid.Row="0" />
        <TextBlock Padding="5,0,5,0" x:Name="ChapterLabel" Text="" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom" Height="100" TextWrapping="Wrap" Grid.Row="1"/>
    </Grid>
</UserControl>
