<UserControl x:Class="Utils.Controls.TabOverflowManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <UserControl.Resources>
        <ContextMenu x:Key="TabListContextMenuKey" x:Name="TabListContextMenu">
            <!-- Items will be populated dynamically by the code-behind -->
        </ContextMenu>
    </UserControl.Resources>
    <Grid>
        <!-- This control is primarily logic-driven and interacts with an external TabControl. -->
        <!-- It might not have its own visible UI elements other than what it injects (like ContextMenu) -->
        <!-- or controls (like scroll buttons visibility on the TabControl). -->
        <!-- A placeholder TextBlock might be useful for design-time, but not strictly necessary. -->
        <!-- <TextBlock Text="TabOverflowManagementControl (Logic Only)"/> -->
    </Grid>
</UserControl>
